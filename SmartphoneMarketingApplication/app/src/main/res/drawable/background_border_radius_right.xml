<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- we define background color -->
    <solid android:color="@color/black15" />

    <!-- we define border color and thick -->
    <stroke
        android:width="1dp"
        android:color="@color/black15" />

    <!-- add some padding for text inside -->
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="20dp"
        android:top="0dp" />

    <!-- we define corner radius, note that radius can be different for each corner -->
    <corners
        android:bottomLeftRadius="0dp"
        android:bottomRightRadius="90dp"
        android:topLeftRadius="0dp"
        android:topRightRadius="90dp" />

</shape>