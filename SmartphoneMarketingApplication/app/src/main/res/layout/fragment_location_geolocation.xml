<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:fab="http://schemas.android.com/tools"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="256px">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/contentFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </RelativeLayout>

        <fragment
            android:id="@+id/bottomSheet"
            android:name="gs.maps.nestedscroll.BottomSheetFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/bottom_sheet_behavior"
            tools:layout="@layout/bottom_sheet_content" />

    </android.support.design.widget.CoordinatorLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/floating_action_location_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/transparent"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        fab:menu_labels_style="@style/MenuLabelsStyle"
        fab:menu_backgroundColor="@color/transparent"
        fab:menu_colorNormal="@color/colorPrimaryDark"
        fab:menu_colorPressed="@color/color_red"
        fab:menu_colorRipple="@color/colorPrimaryDark"
        fab:menu_icon="@drawable/format_align_left"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_position="left"
        fab:menu_labels_singleLine="true"
        fab:menu_shadowColor="#444">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/bank_location_type_bank_agency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bank"
            fab:fab_colorNormal="@color/colorPrimaryDark"
            fab:fab_colorPressed="@color/colorPrimaryDark"
            fab:fab_colorRipple="@color/colorPrimaryDark"
            fab:fab_label="Điểm giao dịch ngân hàng" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/bank_location_type_atm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/credit_card"
            fab:fab_colorNormal="@color/colorPrimaryDark"
            fab:fab_colorPressed="@color/color_red"
            fab:fab_colorRipple="@color/colorPrimaryDark"
            fab:fab_label="ATM" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/bank_location_type_sales_promotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sales_promotion"
            fab:fab_colorNormal="@color/colorPrimaryDark"
            fab:fab_colorPressed="@color/color_red"
            fab:fab_colorRipple="@color/colorPrimaryDark"
            fab:fab_label="Khuyến mại"
            fab:menu_colorRipple="@color/colorPrimaryDark" />
    </com.github.clans.fab.FloatingActionMenu>
</RelativeLayout>