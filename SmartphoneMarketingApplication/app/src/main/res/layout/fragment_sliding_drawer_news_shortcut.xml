<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_refresh_layout"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/linear_layout_id"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_app_icon_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/fintechviet_thumbnail" />

        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/black55"
            android:padding="5dp"
            android:maxLines="3"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </RelativeLayout>

    <net.sourceforge.PagerSlidingTabStripColor
        android:id="@+id/tabs_sliding_drawer_news_shortcut_id"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@+id/linear_layout_id" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_sliding_drawer_news_shortcut_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tabs_sliding_drawer_news_shortcut_id" />

</RelativeLayout>